\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{title}[2025/02/26 Custom title page layout]

% Define title page variables with defaults
\newcommand{\subtitle}{}
\newcommand{\setsubtitle}[1]{\renewcommand{\subtitle}{#1}}

\newcommand{\logo}{}
\newcommand{\setlogo}[1]{\renewcommand{\logo}{#1}}

\newcommand{\dep}{}
\newcommand{\setdep}[1]{\renewcommand{\dep}{#1}}

\newcommand{\uni}{}
\newcommand{\setuni}[1]{\renewcommand{\uni}{#1}}

\newcommand{\accyear}{}
\newcommand{\setaccyear}[1]{\renewcommand{\accyear}{AY #1}}

% Command to create the title page
\newcommand{\maketitlepage}{%
	\begin{titlepage}
		\begin{center}
			\Huge
			\textbf{\@title}

			\Large
			\textbf{\subtitle}

			\LARGE
			\@author

			\vfill

			\includegraphics[width=0.3\textwidth]{\logo}

			\vspace{0.5cm}

			\large
			\dep \\
			\uni \\
			\accyear
		\end{center}
	\end{titlepage}
}

\endinput
