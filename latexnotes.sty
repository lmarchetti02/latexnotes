\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{latexnotes}[2025/02/26 Physics-oriented template for note taking]

% Language support
\RequirePackage[english]{babel}

% Font and encoding
\RequirePackage[utf8]{inputenc}
\RequirePackage[T1]{fontenc}
\RequirePackage{microtype}
\linespread{1.05}
\usepackage[sc]{mathpazo} % or option osf
\usepackage{newpxmath}

% Page margins and layout
\RequirePackage[a4paper, margin=1in]{geometry}
\RequirePackage{parskip}

% Load all component packages
\RequirePackage{layout}
\RequirePackage{formulas}
\RequirePackage{theorems}
\RequirePackage{title}

% Customize links
\RequirePackage[breaklinks=true]{hyperref}
\hypersetup{
	colorlinks=true,
	linkcolor=black,
	filecolor=magenta,
	urlcolor=black
}

% Images
\RequirePackage{graphicx}
\graphicspath{{img/}}
\RequirePackage[textfont={normalsize,sl},labelfont=bf]{caption}
\RequirePackage{subcaption}
\RequirePackage{float}
\RequirePackage{wrapfig}

% TikZ and PGF Plots
\RequirePackage{tikz, tikz-3dplot, pgfplots}
\usetikzlibrary{intersections, fadings, decorations.pathreplacing, svg.path, arrows.meta}
\pgfplotsset{width=10cm,compat=newest}
\usepgfplotslibrary{fillbetween}

% Tables
\RequirePackage{tabls}
\setlength{\tabcolsep}{10pt}		% column separation
\renewcommand{\arraystretch}{1.5}	% row separation

% Lists
\RequirePackage[shortlabels]{enumitem}
\setitemize{noitemsep, topsep=5pt, parsep=5pt, partopsep=5pt}

\endinput
